<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    안내 멘트-->

    <TextView
        android:id="@+id/tv_signup_profile_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:text="다른 사람들이 볼"
        android:textColor="@color/Gray_06"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/tv_signup_profile_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="프로필과 닉네임을 설정해주세요"
        android:textColor="@color/Gray_06"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_profile_1" />
    <!--    프로필 설정-->
    <LinearLayout
        android:id="@+id/ll_signup_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_profile_2">
        <!--        프로필 사진-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email_signin_input_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:errorEnabled="true"
            app:hintEnabled="false"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/high_radius_button_off"/>

        </com.google.android.material.textfield.TextInputLayout>
        <!--        닉네임 입력창-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email_signin_input_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:errorEnabled="true"
            app:hintEnabled="false">
            <EditText
                android:id="@+id/tiet_email_signin_input_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="영문, 특수 문자 제외 8자 이내"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:backgroundTint="@color/Gray_06"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>